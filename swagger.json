{
	"swagger": "2.0",
	"info": {
		"version": "1.0.0",
		"title": "Seppi App SwaggerHub",
		"description": "Seppi Server APIs",
		"license": {
		"name": "GPL",
		"url": "https://opensource.org/licenses/gpl-license"
	  }
	},
	"host": "localhost:5000",
	"basePath": "",
	"tags": [
	  {
		"name": "Users",
		"description": "API for users in the system"
	  }
	],
	"schemes": [
	  "http"
	],
	"consumes": [
	  "application/json"
	],
	"produces": [
	  "application/json"
	],
	"definitions": {
	  "User": {
		"required": [
		  "email",
		  "password"
		],
		"properties": {
		  "email": {
			"type": "string",
			"uniqueItems": true,
			"example": "user@example.com"
		  },
		  "password": {
			"type": "string",
			"uniqueItems": false,
			"example": "password",
			"format": "password"
		  }
		}
    },
    "Register": {
      "required": [
        "email",
        "password"
      ],
      "properties": {
        "email": {
          "type": "string",
          "uniqueItems": true,
          "example": "user@example.com"
        },
        "password": {
          "type": "string",
          "uniqueItems": false,
          "example": "password",
          "format": "password"
      },
      "name": {
        "type": "string",
        "uniqueItems": false,
        "example": "John"
      }
      }
  },
      "Email": {
		"required": [
		  "email"
		],
		"properties": {
		  "email": {
			"type": "string",
			"uniqueItems": true,
			"example": "user@example.com"
		  }
		}
    },
    "searchRecipe": {
      "required": [
        "search"
      ],
      "properties": {
        "search": {
          "type": "string",
          "uniqueItems": false,
          "example": "chicken"
        }
      }
    }
	},
	"paths": {
		"/register": {
		  "post": {
			"tags": [
			  "Users"
			],
			"description": "Create new user in system",
			"parameters": [
			  {
				"name": "user",
				"in": "body",
				"description": "User that we want to create",
				"schema": {
				  "$ref": "#/definitions/Register"
				}
			  }
			],
			"produces": [
			  "application/json"
			],
			"responses": {
				"200":
				{
					"description": "New User Is Created"
				},
				"400":
				{
					"description": "Bad Request"
				},
				"500":
				{
					"description": "Internal Server Error"
				}
				}
			}
		},
		"/login": {
			"post": {
			  "tags": [
				"Users"
			  ],
			  "description": "Log in user to system",
			  "parameters": [
				{
				  "name": "user",
				  "in": "body",
				  "description": "User that we want to sign in",
				  "schema": {
					"$ref": "#/definitions/User"
				  }
				}
			  ],
			  "produces": [
				"application/json"
			  ],
			  "responses": {
				  "200":
				  {
					  "description": "New User Is Created"
				  },
				  "401":
				  {
					  "description": "Email not Authenticated"
				  },
				  "500":
				  {
					  "description": "Internal Server Error"
				  }
				  }
			  }
		  },
          "/resetPassword": {
  			"post": {
  			  "tags": [
  				"Users"
  			  ],
  			  "description": "resets user password",
  			  "parameters": [
  				{
  				  "name": "user",
  				  "in": "body",
  				  "description": "User's email we want to change the password of",
  				  "schema": {
  					"$ref": "#/definitions/Email"
  				  }
  				}
  			  ],
  			  "produces": [
  				"application/json"
  			  ],
  			  "responses": {
  				  "200":
  				  {
  					  "description": "Password reset email sent"
  				  },
  				  "400":
  				  {
  					  "description": "Internal Server Error"
  				  }
  				  }
  			  }
  		  },
          "/changeEmail": {
  			"post": {
  			  "tags": [
  				"Users"
  			  ],
  			  "description": "Changes user email",
  			  "parameters": [
  				{
  				  "name": "user",
  				  "in": "body",
  				  "description": "User's email we want to change for the old one",
  				  "schema": {
  					"$ref": "#/definitions/Email"
  				  }
  				}
  			  ],
  			  "produces": [
  				"application/json"
  			  ],
  			  "responses": {
  				  "200":
  				  {
  					  "description": "Email changed need to verify"
  				  },
  				  "400":
  				  {
  					  "description": "Internal Server Error"
  				  }
  				  }
  			  }
  		  },
          "/searchRecipe": {
  			"post": {
  			  "tags": [
  				"Recipe"
  			  ],
  			  "description": "Changes user email",
  			  "parameters": [
  				{
  				  "name": "search",
  				  "in": "body",
  				  "description": "User's email we want to change for the old one",
  				  "schema": {
  					"$ref": "#/definitions/searchRecipe"
  				  }
  				}
  			  ],
  			  "produces": [
  				"application/json"
  			  ],
  			  "responses": {
  				  "200":
  				  {
  					  "description": "Email changed need to verify"
  				  },
  				  "400":
  				  {
  					  "description": "Internal Server Error"
  				  }
  				  }
  			  }
  		  },
          "/userInfo": {
  			"post": {
  			  "tags": [
  				"Users"
  			  ],
  			  "description": "Changes user email",
  			  "parameters": [
  				{
  				  "name": "user",
  				  "in": "body",
  				  "description": "When user is signed in call this to get info",
  				  "schema": {

  				  }
  				}
  			  ],
  			  "produces": [
  				"application/json"
  			  ],
  			  "responses": {
  				  "200":
  				  {
  					  "description": "Went through"
  				  },
  				  "400":
  				  {
  					  "description": "Internal Server Error"
  				  }
  				  }
  			  }
  		  }
	}
}
